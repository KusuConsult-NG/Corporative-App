rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // Helper Functions
    // ============================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // ============================================
    // DEVELOPMENT-FRIENDLY RULES
    // Easy for legitimate users, blocked for anonymous
    // ============================================
    
    // Users collection - authenticated users can read all, write their own
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update, delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Audit logs - allow unauthenticated writes for login tracking
    match /audit_logs/{logId} {
      allow read: if isAuthenticated();
      allow create: if true; // Allow login tracking before auth
      allow update, delete: if false; // Immutable
    }
    
    // All other collections - authenticated users can do everything
    // This makes development easy while blocking anonymous abuse
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
